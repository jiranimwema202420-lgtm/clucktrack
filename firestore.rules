
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------

    /**
     * Returns true if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns true if the authenticated user's UID matches the provided userId.
     * This is the standard pattern for checking document ownership.
     * @param userId The UID to check against the authenticated user.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------

    /**
     * @description Manages user profile documents and their subcollections.
     * @path /users/{userId}
     */
    match /users/{userId} {
      /**
       * @description A user can read and write their own profile.
       * @allow (read, write)
       * @deny (list) Listing all users is disallowed.
       */
      allow read, write: if isOwner(userId);
      allow list: if false;

      /**
       * @description Secures the 'flocks' subcollection.
       * @path /users/{userId}/flocks/{flockId}
       * @allow (read, write) The owner of the parent user document.
       */
      match /flocks/{flockId} {
        allow read, write: if isOwner(userId);
      }

      /**
       * @description Secures the 'sales' subcollection.
       * @path /users/{userId}/sales/{saleId}
       * @allow (read, write) The owner of the parent user document.
       */
      match /sales/{saleId} {
        allow read, write: if isOwner(userId);
      }

      /**
       * @description Secures the 'expenditures' subcollection.
       * @path /users/{userId}/expenditures/{expenditureId}
       * @allow (read, write) The owner of the parent user document.
       */
      match /expenditures/{expenditureId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
