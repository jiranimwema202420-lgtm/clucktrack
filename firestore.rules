
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -----------------------------------------------------------------------
    // HELPER FUNCTIONS
    // -----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && isExistingDoc();
    }

    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // -----------------------------------------------------------------------
    // USERS ROOT
    // Prevents enumeration of all users
    // -----------------------------------------------------------------------
    match /users/{userId} {

      // USER PROFILE DOC -----------------------------------------------------
      allow get: if isOwner(userId);
      allow list: if false; // never allow listing all users
      allow create: if isOwner(userId)
                  && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId)
                  && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      // ---------------------------------------------------------------------
      // SUBCOLLECTIONS (all user-owned)
      // Each section includes two rules:
      //   1. match /subcollection         <-- for LIST operations
      //   2. match /subcollection/{docId} <-- for GET/WRITE operations
      // ---------------------------------------------------------------------

      // CONTACTS -------------------------------------------------------------
      match /contacts {
        allow list: if isOwner(userId);
      }
      match /contacts/{contactId} {
        allow read, write: if isOwner(userId);
      }

      // FLOCKS ---------------------------------------------------------------
      match /flocks {
        allow list: if isOwner(userId);
      }
      match /flocks/{flockId} {
        allow read, write: if isOwner(userId);
      }

      // SALES ----------------------------------------------------------------
      match /sales {
        allow list: if isOwner(userId);
      }
      match /sales/{saleId} {
        allow read, write: if isOwner(userId);
      }

      // EXPENDITURES ---------------------------------------------------------
      match /expenditures {
        allow list: if isOwner(userId);
      }
      match /expenditures/{expenditureId} {
        allow read, write: if isOwner(userId);
      }

      // SENSOR DATA ----------------------------------------------------------
      match /sensorData {
        allow list: if isOwner(userId);
      }
      match /sensorData/{sensorDataId} {
        allow read, write: if isOwner(userId);
      }
    }

    // -----------------------------------------------------------------------
    // GLOBAL FEED CATALOG
    // -----------------------------------------------------------------------
    match /feeds {
      allow list: if isSignedIn();
    }
    match /feeds/{feedId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // -----------------------------------------------------------------------
    // ADMIN ROLES
    // -----------------------------------------------------------------------
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
